{% extends '::base.html.twig' %}

{% block body -%}
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-4">
                <h1>Usuario</h1>
                <table class="table table-hover">
                    <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ entity.id }}</td>
                        </tr>
                        <tr>
                            <th>Nombre</th>
                            <td>{{ entity.nombre }}</td>
                        </tr>
                        <tr>
                            <th>Apellido paterno</th>
                            <td>{{ entity.apaterno }}</td>
                        </tr>
                        <tr>
                            <th>Apellido materno</th>
                            <td>{{ entity.amaterno }}</td>
                        </tr>
                        <tr>
                            <th>Calle</th>
                            <td>{{ entity.dom.calle }}</td>
                        </tr>
                        <tr>
                            <th>Colonia</th>
                            <td>{{ entity.dom.colonia }}</td>
                        </tr>
                        <tr>
                            <th>Entidad</th>
                            <td>{{ entity.dom.entidad }}</td>
                        </tr>
                    </tbody>
                </table>

                    <a class="btn btn-w-md btn-default" href="{{ path('usuario') }}">
                        Regresar
                    </a>
                
                    <a class="btn btn-w-md btn-default" href="{{ path('usuario_edit', { 'id': entity.id }) }}">
                        Editar
                    </a> 

                    {{ form(delete_form) }}
            </div>
        </div>
    </div>
</section>
{% endblock %}
